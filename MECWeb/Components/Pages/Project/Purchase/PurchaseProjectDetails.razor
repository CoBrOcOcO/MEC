    /// <summary>
    /// Save all comments to database
    /// </summary>
    private async Task SaveAllComments()
    {
        if (ReadOnly) return; // Don't save in read-only mode

        isSavingComments = true;
        try
        {
            using var transaction = await DbContext.Database.BeginTransactionAsync();

            var workflowsToUpdate = new List<DbWorkflow>();

            foreach (var kvp in workflowComments)
            {
                var workflow = completedWorkflows.FirstOrDefault(w => w.Id == kvp.Key);
                if (workflow == null) continue;

                var existingDescription = workflow.Description ?? "";

                // Remove old comment if present
                if (existingDescription.Contains("PURCHASE_COMMENT:"))
                {
                    var startIndex = existingDescription.IndexOf("PURCHASE_COMMENT:");
                    var endIndex = existingDescription.IndexOf("ENDMEC:", startIndex);
                    if (endIndex > startIndex)
                    {
                        existingDescription = existingDescription.Remove(startIndex, endIndex - startIndex + 7);
                    }
                    else
                    {
                        existingDescription = existingDescription.Substring(0, startIndex);
                    }
                }

                // Add new comment (only if not empty)
                if (!string.IsNullOrWhiteSpace(kvp.Value))
                {
                    workflow.Description = existingDescription + $"PURCHASE_COMMENT:{kvp.Value.Trim()}ENDMEC:";
                }
                else
                {
                    workflow.Description = existingDescription;
                }

                workflow.LastChange = DateTime.UtcNow;
                workflowsToUpdate.Add(workflow);
            }

            if (workflowsToUpdate.Any())
            {
                DbContext.Workflow.UpdateRange(workflowsToUpdate);
            }

            await DbContext.SaveChangesAsync();
            await transaction.CommitAsync();

            Snackbar.Add("Kommentare erfolgreich gespeichert!", Severity.Success);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Fehler beim Speichern der Kommentare: {ex.Message}", Severity.Error);
            Console.WriteLine($"SaveAllComments Error: {ex.Message}");
        }
        finally
        {
            isSavingComments = false;
        }
    }
